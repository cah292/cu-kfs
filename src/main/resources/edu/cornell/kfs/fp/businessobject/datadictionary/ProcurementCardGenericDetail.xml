<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:p="http://www.springframework.org/schema/p" 
	   xsi:schemaLocation="http://www.springframework.org/schema/beans         
	   http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="ProcurementCardGenericDetail" parent="ProcurementCardGenericDetail-parentBean"/>

  <bean id="ProcurementCardGenericDetail-parentBean" abstract="true" parent="BusinessObjectEntry">
    <property name="businessObjectClass" value="edu.cornell.kfs.fp.businessobject.ProcurementCardGenericDetail"/>
    <property name="objectLabel" value="Procurement Card Generic Detail"/>
    <property name="attributes">
      <list>
      	<ref bean="ProcurementCardGenericDetail-genericId"/>
        <ref bean="ProcurementCardGenericDetail-documentNumber"/>
        <ref bean="ProcurementCardGenericDetail-financialDocumentTransactionLineNumber"/>
        <ref bean="ProcurementCardGenericDetail-genericAddendumData"/>
      </list>
    </property>
  </bean>

  <bean id="ProcurementCardGenericDetail-genericId" parent="ProcurementCardGenericDetail-genericId-parentBean" />
  <bean id="ProcurementCardGenericDetail-genericId-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="genericId" />
    <property name="label" value="Pcard Generic Id" />
    <property name="forceUppercase" value="false" />
    <property name="maxLength" value="9" />
    <property name="control">
      <bean parent="TextControlDefinition" p:size="9"/>
    </property>
  </bean>
  
  <bean id="ProcurementCardGenericDetail-documentNumber" parent="ProcurementCardGenericDetail-documentNumber-parentBean" />
  <bean id="ProcurementCardGenericDetail-documentNumber-parentBean" abstract="true" parent="DocumentHeader-documentNumber">
    <property name="forceUppercase" value="false" />
  </bean>

  <bean id="ProcurementCardGenericDetail-financialDocumentTransactionLineNumber" parent="ProcurementCardGenericDetail-financialDocumentTransactionLineNumber-parentBean" />
  <bean id="ProcurementCardGenericDetail-financialDocumentTransactionLineNumber-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="financialDocumentTransactionLineNumber"/>
    <property name="forceUppercase" value="true"/>
    <property name="label" value="Financial Document Transaction Line Number"/>
    <property name="shortLabel" value="Number"/>
    <property name="maxLength" value="7"/>
    <property name="validationPattern">
      <ref bean="NumericValidation" />
    </property>
    <property name="control">
      <bean parent="TextControlDefinition" p:size="9"/>
    </property>
  </bean>
  
  <bean id="ProcurementCardGenericDetail-genericAddendumData" parent="ProcurementCardGenericDetail-genericAddendumData-parentBean" />
  <bean id="ProcurementCardGenericDetail-genericAddendumData-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="name" value="genericAddendumData" />
    <property name="label" value="Generic Addendum Data" />
    <property name="forceUppercase" value="false" />
    <property name="maxLength" value="131" />
    <property name="control">
      <bean parent="TextControlDefinition" p:size="131"/>
    </property>
  </bean>
  
</beans>